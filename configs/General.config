### 通用配置文件 ###

# 基础编译配置
CONFIG_DEVEL=y                           # 启用开发模式，包含调试符号
CONFIG_TARGET_OPTIONS=y                  # 启用目标设备特定选项
CONFIG_TARGET_OPTIMIZATION="-O3 -pipe -march=armv8-a+crypto+crc -mcpu=cortex-a53+crypto+crc -mtune=cortex-a53"  # 针对Cortex-A53架构的编译优化参数
CONFIG_CCACHE=y                          # 启用编译缓存，显著加速后续编译过程

# 系统基础包
CONFIG_PACKAGE_default-settings=y        # 默认系统设置包
CONFIG_PACKAGE_default-settings-chn=y    # 中国地区定制化默认设置
CONFIG_TARGET_PER_DEVICE_ROOTFS=y        # 为每个设备生成独立的根文件系统
CONFIG_LUCI_LANG_zh_Hant=y               # 繁体中文语言支持

# 禁用不需要的源
# CONFIG_FEED_nss_packages is not set     # 禁用NSS包源
# CONFIG_FEED_sqm_scripts_nss is not set  # 禁用SQM NSS脚本源
# CONFIG_TARGET_ROOTFS_INITRAMFS is not set  # 不生成initramfs镜像

### 内存压缩交换配置 ###
CONFIG_PACKAGE_zram-swap=y               # ZRAM内存压缩交换分区，提高内存利用率
CONFIG_PACKAGE_kmod-lib-lz4=y            # LZ4快速压缩算法内核模块
CONFIG_KERNEL_ZRAM_BACKEND_LZ4=y         # ZRAM使用LZ4压缩后端
CONFIG_KERNEL_ZRAM_BACKEND_LZO=y         # ZRAM使用LZO压缩后端（备用选项）
CONFIG_KERNEL_ZRAM_DEF_COMP_LZ4=y        # ZRAM默认使用LZ4压缩算法

### 系统工具和实用程序 ###
CONFIG_PACKAGE_tmux=y                    # 终端复用器，支持多个会话和窗口
CONFIG_PACKAGE_dmesg=y                   # 内核日志查看工具
CONFIG_PACKAGE_htop=y                    # 交互式进程查看器，比top更友好
CONFIG_PACKAGE_btop=y                    # 现代化资源监控工具，htop的增强版
CONFIG_PACKAGE_fdisk=y                   # 传统MBR磁盘分区工具
CONFIG_PACKAGE_cfdisk=y                  # 基于curses的图形化磁盘分区工具
CONFIG_PACKAGE_sgdisk=y                  # GPT分区表操作工具
CONFIG_PACKAGE_tune2fs=y                 # ext2/ext3/ext4文件系统调优工具
CONFIG_PACKAGE_ariang=y                  # Aria2下载工具的Web图形界面
CONFIG_PACKAGE_fstrim=y                  # SSD TRIM命令支持，优化固态硬盘性能
CONFIG_PACKAGE_nano-full=y               # 全功能版本的nano文本编辑器
CONFIG_PACKAGE_autocore=y                # 自动检测CPU架构和核心数
CONFIG_PACKAGE_coremark=y                # CPU性能基准测试工具
CONFIG_PACKAGE_hdparm=y                  # 硬盘参数设置和性能测试工具
CONFIG_PACKAGE_smartmontools-drivedb=y   # 硬盘健康监控工具的驱动数据库
CONFIG_PACKAGE_zoneinfo-asia=y           # 亚洲时区信息数据
CONFIG_PACKAGE_acme-acmesh-dnsapi=y      # ACME客户端DNS API支持（用于自动SSL证书）
CONFIG_PACKAGE_openssh-sftp-server=y     # OpenSSH SFTP服务器子系统
CONFIG_PACKAGE_ddns-scripts-cloudflare=y # Cloudflare动态DNS更新脚本
CONFIG_PACKAGE_sqm-scripts-nss=y         # 智能队列管理脚本（NSS优化版）

